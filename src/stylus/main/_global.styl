.heading-font
    font-family Catamaran,Helvetica,Arial,sans-serif
    font-weight 200
    letter-spacing 1px

.body-font
    font-family Muli,Helvetica,Arial,sans-serif

.alt-font
    font-family Lato,Helvetica,Arial,sans-serif
    text-transform uppercase
    letter-spacing 2px

*
    outline 0

:active,:focus
    outline 0
    border none

body,html
    height 100%
    width 100%

body
    font-family Muli,Helvetica,Arial,sans-serif
    webkit-tap-highlight-color #222

a
    -webkit-transition all .35s
    -moz-transition all .35s
    transition all .35s
    color #207780

a:focus,a:hover
    color #165157

hr
    max-width 100px
    margin 25px auto 0
    border-width 1px
    border-color rgba(34,34,34,.1)
    &.light
        border-color #fff

h1,h2,h3,h4,h5,h6
    font-family Catamaran,Helvetica,Arial,sans-serif
    font-weight 200
    letter-spacing 1px

p
    font-size 18px
    line-height 1.5
    margin-bottom 20px

.navbar-default
    background-color #fff
    border-color rgba(34,34,34,.05)
    -webkit-transition all .35s
    -moz-transition all .35s
    transition all .35s
    font-family Catamaran,Helvetica,Arial,sans-serif
    font-weight 200
    letter-spacing 1px
    .navbar-header
        .navbar-brand
            font-family Catamaran,Helvetica,Arial,sans-serif
            font-weight 200
            letter-spacing 1px
            color #207780
        .navbar-toggle
            font-size 12px
            color #222
            padding 8px 10px
    .nav
        & > li
            & > a
                font-family Lato,Helvetica,Arial,sans-serif
                text-transform uppercase
                letter-spacing 2px
                font-size 11px

.navbar-default .navbar-header .navbar-brand:focus,.navbar-default .navbar-header .navbar-brand:hover
    color #165157

.navbar-default .nav>li>a,.navbar-default .nav>li>a:focus
    color #222

.navbar-default .nav>li>a:focus:hover,.navbar-default .nav>li>a:hover
    color #207780

.navbar-default .nav>li.active>a,.navbar-default .nav>li.active>a:focus
    color #207780!important
    background-color #dedede

.navbar-default .nav>li.active>a:focus:hover,.navbar-default .nav>li.active>a:hover
    background-color #dedede

@media (min-width:768px)
    .navbar-default
        background-color #dedede
        border-color transparent
        .navbar-header
            .navbar-brand
                color #000
        &.affix
            background-color #fff
            border-color rgba(34,34,34,.1)
            .navbar-header
                .navbar-brand
                    color #222

@media (min-width:768px)  
    .navbar-default .navbar-header .navbar-brand:focus,.navbar-default .navbar-header .navbar-brand:hover
        color #fff

@media (min-width:768px)  
    .navbar-default .nav>li>a,.navbar-default .nav>li>a:focus
        color #000

@media (min-width:768px)  
    .navbar-default .nav>li>a:focus:hover,.navbar-default .nav>li>a:hover
        color #fff

@media (min-width:768px)  
    .navbar-default.affix .navbar-header .navbar-brand:focus,.navbar-default.affix .navbar-header .navbar-brand:hover
        color #207780

@media (min-width:768px)  
    .navbar-default.affix .nav>li>a,.navbar-default.affix .nav>li>a:focus
        color #222

@media (min-width:768px) 
    .navbar-default.affix .nav>li>a:focus:hover,.navbar-default.affix .nav>li>a:hover
        color #207780

header
    position relative
    width 100%
    min-height auto
    overflow-y hidden
    background #439774
    background -webkit-linear-gradient(to left,#439774,#243bdc)
    background linear-gradient(to left,#439774,#243bdc)
    color #fff
    .header-content
        text-align center
        padding 150px 0 50px
        position relative
        .header-content-inner
            position relative
            max-width 500px
            margin 0 auto
            h1
                margin-top 0
                margin-bottom 30px
                font-size 30px
            .list-badges
                margin-bottom 25px
                img
                    height 50px
                    margin-bottom 25px
    .device-container
        max-width 300px
        margin 0 auto 100px
        .screen
            img
                border-radius 3px

@media (min-width:768px)
    header
        min-height 100%
        .header-content
            text-align left
            padding 0
            height 100vh
            .header-content-inner
                max-width none
                margin 0
                position absolute
                top 50%
                transform translateY(-50%)
                width 100%
                h1
                    font-size 35px
        .device-container
            max-width none
            max-height calc(0vh)
            margin 100px auto 0

@media (min-width:992px)
    header
        .header-content
            .header-content-inner
                h1
                    font-size 50px

section
    padding 100px 0
    h2
        font-size 50px
    &.about
        position relative
        min-height 100%
        h2
            margin-top 0
            font-size 50px
        .badges
            .badge-link
                display block
                margin-bottom 25px
                &:last-child
                    margin-bottom 0
                img
                    height 60px
    &.skills
        div
            &.skill
                .feature-item
                    p
                        &:first-child
                            min-height 250px
                            display flex
                            align-items center
        .section-heading
            h2
                margin-top 0
            p
                margin-bottom 0
        .device-container
            margin-bottom 100px
        .feature-item
            text-align center
            margin-bottom 30px
            h3
                font-size 30px
            i
                font-size 80px
                background -webkit-linear-gradient(to left,#439774,#243bdc)
                background linear-gradient(to left,#439774,#243bdc)
                -webkit-background-clip text
                -webkit-text-fill-color transparent
    &.cta
        position relative
        -webkit-background-size cover
        -moz-background-size cover
        background-size cover
        -o-background-size cover
        background-position center
        background-image url(../img/bg-cta.jpg)
        min-height 100%
        .cta-content
            position relative
            z-index 1
            h2
                margin-top 0
                margin-bottom 25px
                color #fff
                font-size 50px
        .overlay
            height 100%
            width 100%
            background-color rgba(0,0,0,.5)
            position absolute
            top 0
            left 0
        .projectcl
            margin-bottom 40px
        .project
            display none
        .linkpt
            position relative
            display block
            .overlay-pt
                height 100%
                width 100%
                background-color rgba(0,0,0,.5)
                position absolute
                top 0
                left 0
                z-index 2
                color #fff
                font-weight 700
                font-size 20px
                opacity 0
                display -webkit-box
                display -webkit-flex
                display -moz-box
                display -ms-flexbox
                display flex
                -webkit-box-pack center
                -webkit-justify-content center
                -moz-box-pack center
                -ms-flex-pack center
                justify-content center
                -webkit-box-align center
                -webkit-align-items center
                -moz-box-align center
                -ms-flex-align center
                align-items center
                -webkit-box-orient vertical
                -webkit-box-direction normal
                -webkit-flex-direction column
                -moz-box-orient vertical
                -moz-box-direction normal
                -ms-flex-direction column
                flex-direction column
                -moz-transition all .3s
                -o-transition all .3s
                -ms-transition all .3s
                -webkit-transition all .3s
                transition all .3s
                i
                    font-size 30px
            &:hover
                .overlay-pt
                    opacity 1
    &.contact
        text-align center
        background #207780
        h2
            margin-top 0
            margin-bottom 25px
            i
                color #007ab9
        ul
            &.list-social
                margin-bottom 0
                li
                    a
                        display block
                        height 80px
                        width 80px
                        line-height 80px
                        font-size 40px
                        border-radius 100%
                        color #fff
                    &.social-email
                        a
                            background-color #b71313
                            &:hover
                                background-color #a01111
                    &.social-github
                        a
                            background-color #24292e
                            &:hover
                                background-color #191c20
                    &.social-facebook
                        a
                            background-color #3b5998
                            &:hover
                                background-color #344e86
                    &.social-linkedin
                        a
                            background-color #007ab9
                            &:hover
                                background-color #0069a0

@media (min-width:768px)
    section
        &.about
            .badges
                .badge-link
                    display inline-block
                    margin-bottom 0

@media (min-width:768px)
    section
        &.about
            h2
                font-size 70px

section.skills .device-container,section.skills .feature-item
    max-width 300px
    margin 0 auto

@media (min-width:992px)
    section
        &.skills
            .device-container
                margin-bottom 0

@media (min-width:992px)  
    section.skills .device-container,section.skills .feature-item
        max-width none

@media (min-width:768px)
    section
        &.cta
            .cta-content
                h2
                    font-size 80px

#portfolio
    p 
        color #fff

footer
    background-color #222
    padding 25px 0
    color rgba(255,255,255,.3)
    text-align center
    p
        font-size 12px
        margin 0
        color #fff
    ul
        margin-bottom 0
        li
            a
                font-size 12px
                color rgba(255,255,255,.3)

footer ul li a.active,footer ul li a:active,footer ul li a:focus,footer ul li a:hover
    text-decoration none

.bg-primary
    background #207780
    background -webkit-linear-gradient(#207780,#23962c)
    background linear-gradient(#207780,#23962c)

.text-primary
    color #207780

.no-gutter
    & > [class*=col-]
        padding-right 0
        padding-left 0

.btn-outline
    color #fff
    border-color #fff
    border 1px solid

.btn-outline.active,.btn-outline:active,.btn-outline:focus,.btn-outline:hover
    color #fff
    background-color #207780
    border-color #207780

.ctn
    border-color #207780
    background-color #207780
    color #fff

.btn
    font-family Lato,Helvetica,Arial,sans-serif
    text-transform uppercase
    letter-spacing 2px
    border-radius 300px

.btn-xl
    padding 15px 45px
    font-size 11px

::-moz-selection
    color #fff
    text-shadow none
    background #222

::selection
    color #fff
    text-shadow none
    background #222

img
    &::selection
        color #fff
        background 0 0
    &::-moz-selection
        color #fff
        background 0 0